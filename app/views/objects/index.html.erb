<div id="objects_box">
	<% @objects.each do |p|%>
		<div class="object_item">
			<h3><%= p.title%></h3>
			<div>
			<div class="image">
				<%= image_tag p.img.url(:medium)%>
			</div>
			<div class="desc">
				<span>Адрес объекта: <br/><i class="address"><%= p.address%></i></span> <br/>
				<span>Этажность объекта: <br/><i class="phone"><%= p.floors%></i></span><br/>
				<span>Cроки сдачи объекта: <br/><i class="date_finish"><%= p.date_finish %></i></span><br/><br/>
				<span>Отдел продаж: <br/>
					<h1><i>(843)527-53-45</i></h1>
				</span><br/>
				<%= link_to "посмотреть на карте", object_map_path(p.id), :remote=>true %>
			</div>
			</div>
			<div class="clear"></div>
			<br/>
			<div class="description">
				<p><%= p.description.html_safe %></p>
			</div>
			<div class="clear"></div>
			<div class="object_links">
				<span class="brone link">
					<%= link_to "Оставить заявку", feedback_order_path, :remote=>true %>
				</span>
				<%  if p.photos.count>0  %>
					<span class="photos link">
						<%= link_to "фотографии с объекта" , object_photos_path(p.id), :class=>"blue_link"%>	
					</span>
				<% end %>
				<% if p.declarations.count>0  %>
					<span class="project link">
						<%= link_to "проектные декларации" , declarations_filter_path(p.id), :class=>"blue_link" %>	
					</span>
				<% end %>
				<% if p.plans.count>0  %>
					<span class="plan link">
						<%= link_to "планировка" , object_path(p.id), :remote=>true, :class=>"blue_link" %>	
					</span>
				<% end %>
			</div>
			<br/>
		</div>
	<% end %>

</div>
